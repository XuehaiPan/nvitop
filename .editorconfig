# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.{yaml,yml,json,xml}]
indent_size = 2

[*.md]
indent_size = 2
x-soft-wrap-text = true

[*.rst]
indent_size = 4
x-soft-wrap-text = true

[{*.,}{Dockerfile,dockerfile}{*.,}]
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_style = tab

[*.bat]
end_of_line = crlf
indent_style = tab
